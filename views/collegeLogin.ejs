<div class="container">
    <div class="form-box">
        <h2>College Login</h2>
        <form action="/college/login" method="POST">
            <div class="input-box">
                <label for="collegeEmail">College Email</label>
                <input type="email" id="collegeEmail" name="collegeEmail" placeholder="Enter your college email" required>
            </div>

            <div class="input-box">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" required>
            </div>

            <button type="submit">Login</button>

            <p class="register-login-link">
                Don't have an account? <a href="/college/register">Register here</a>
            </p>
        </form>
    </div>
</div>

